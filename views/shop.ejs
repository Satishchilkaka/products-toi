<%- include('includes/head.ejs')%>
<link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('includes/navigation.ejs')%>

    <main>
    
<% if(productName.length >0) {%>
    <p>List of all the products...</p>
    <div class="product-list">
      <ul class="products">
        <h3>Product Name:<%=productName%></h3>
      </ul>
    </div>
    <% for(let product of productName) { %>
   
      <div class="grid">
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%=product.title%></h1>
                </header>
                <div class="card__image">
                    <img src="/images/products/blueberry.jpeg" alt="A blueberry">
                </img>
                </div>
                <div class="card__content">
                    <h2 class="product__price">$1.99</h2>
                    <p class="product__description">Good for health!</p>
                </div>
                <div class="card__actions">
                    <button class="btn">Add to Cart</button>
                </div>
            </article>
        </div>
    <%} %>
    <% } else { %>
        <h1>No Products Found!</h1>
        <form action="/admin/add-product">
          <a class="active" href="/admin/add-product">Add Product >></a>
        </form>
        %>
<%}%>
    </main>
    <%- include('includes/end.ejs')%>
